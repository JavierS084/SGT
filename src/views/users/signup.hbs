
<div class="form-bg">
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-md-offset-3 col-md-6">
                <form action="/users/signup" method="POST" class="form-horizontal">
                    <span class="heading">Registrarse</span>
                     <div class="form-group">
                        <input type="text" class="form-control" name="fullname" placeholder="Nombre y Apellido" value="{{fullname}}" autofocus required>
                        
                    </div>
                     <div class="form-group">
                        <input type="text" class="form-control" name="username" placeholder="Nombre de usuario" value="{{username}}" required>
                        
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="Email"value="{{email}}" required>
                       
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Contrase&ntilde;a" value="{{password}}" required>
                       
                      
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="confirm_password" placeholder="Confirmar-contrase&ntilde;a"  value="{{confirm_password}}" required>
                        
                    </div>
                    <div class="form-group">
                        <label class="checkbox-wrap checkbox-primary">Super User?
                        <input type="checkbox" checked="" value="{{superuser}}">
                        <span class="checkmark"></span>
                        </label>
                    </div>
                    <div class="form-group">
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-default">Registrarse</button>
                        </div>
                        
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>