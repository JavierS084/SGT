


<div class="row">
    <div class="container-fluid mx-auto">
        <div class="col-md-12 justify-content-center">
            <div class="card">
                <h5 class="text-center mb-4"> <span>Lista de Usuarios</h5>      
                <table class="table table-borderles">
                    
                    <thead class="text-center col-md-8">
                        <tr class="border-bottom">
                            <th> <span class="ml-2">ID</span> </th>
                            <th> <span class="ml-2">Full Name</span> </th>
                            <th> <span class="ml-2">Username</span> </th>
                            <th> <span class="ml-2">Email</span> </th>
                            <th> <span class="ml-2">SuperUser</span> </th>
                            <th> <span class="ml-2">Action</span> </th>
                        </tr>
                    </thead>
                    
                    <tbody class="text-left col-md-8" >
                        {{#each users}}
                            <tr>
                                <td >
                                    <span >{{id}}</span> 
                                </td>
                                <td>
                                        <span>{{fullname}}</span> 
                                </td>
                                <td>
                                    <span >{{username}}</span> 
                                </td>
                                <td >
                                    {{email}}
                                </td>
                                 <td >
                                    {{superuser}}
                                </td>
                                <td class="col-sm-1">
                                    <div class="justify-content-center" > 
                                        <a  href="/users/edit/{{id}}" class="las la-edit text-success"></a> 
                                        <a class="las la-trash text-danger" data-toggle="modal" data-target="#delete"></a>
                                       
                                    </div>
                                </td>
                            </tr>
                            <!--Modal delete -->
                            <div id="delete" class="modal fade">
                                <div class="modal-dialog modal-confirm">
                                    <div class="modal-content">
                                        <div class="modal-header flex-column">						
                                            <h4 class="modal-title w-100">Estas Seguro?</h4>	
                                        </div>
                                        <div class="modal-body">
                                            <p>Realmente deseas eliminar este usuario? Este proceso no se puede deshacer.</p>
                                        </div>
                                        <div class="modal-footer justify-content-center">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>

                                            <a href="/users/delete/{{id}}" class="btn btn-danger">Eliminar</a>
                                            
                                        </div>
                                    </div>
                                </div>
                            </div>
                        
                     
                        {{/each}}
                    </tbody>
                </table>
            </div>
                
        </div>
    </div>

</div>

