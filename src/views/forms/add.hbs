<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"> 


<div class="container-fluid px-1 py-5 mx-auto">
    <div class="row d-flex justify-content-center">
        <div class="col-xl-7 col-lg-8 col-md-9 col-11 text-center">
           
            <div class="card">
                <h5 class="text-center mb-4">Solicitud de Asistencia</h5>
                <form  action="form/add" method="POST"  class="form-card" onsubmit="event.preventDefault()">
                    <div class="row justify-content-between text-left">
                        <div class="form-group col-sm-6 flex-column d-flex">
                          <label class="form-control-label px-3">Dependencia</label> 
                          <input type="text" id="fname" name="dependecia" placeholder="" onblur="validate(1)" autofocus required>
                         </div>
                        <div class="form-group col-sm-6 flex-column d-flex"> <label class="form-control-label px-3" >Nombre Completo</label> 
                        <input type="text" id="lname" name="fullname" placeholder="" onblur="validate(2)" required> </div>
                    </div>
                    <div class="row justify-content-between text-left">
                        <div class="form-group col-sm-6 flex-column d-flex"> <label class="form-control-label px-3" >Cargo</label> 
                        <input type="text" id="email" name="cargo" placeholder="" onblur="validate(3)" required> 
                        </div>
                        <div class="form-group col-sm-6 flex-column d-flex"> <label class="form-control-label px-3">Telefono</label> 
                          <input type="number" id="mob" name="telefono" placeholder="" onblur="validate(4)"> 
                      </div>
                    </div>
                    <div class="row justify-content-between text-left">
                        <div class="form-group col-sm-6 flex-column d-flex"> <label class="form-control-label px-3">Asunto</label> 
                        <input type="text" id="job" name="asunto" placeholder="" onblur="validate(5)" required> 
                      </div>
                    </div>
                    <div class="row justify-content-between text-left">
                        <div class="form-group col-12 flex-column d-flex"> <label class="form-control-label px-3" requerid>Descripci&oacute;n de Solicitud</label> 
                        <textarea type="text" id="ans" name="descripcion" placeholder="" onblur="validate(6)"> </textarea>
                      </div>
                    </div>
                    <div class="row justify-content-end">
                        <div class="form-group col-sm-6"> <button type="submit" class="btn-block btn-primary">Enviar Solicitud</button> </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>